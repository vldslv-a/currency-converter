{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "types/*": [
        "types/*"
      ],
      "api/*": [
        "api/*"
      ],
      "styles/*": [
        "styles/*"
      ],
      "test/*": [
        "../test/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./*.ts",
    "./*.mts",
    "eslint.config.mjs",
    ".prettierrc.mjs",
    "src",
    "test"
  ],
  "exclude": [
    "**/server/**"
  ]
}